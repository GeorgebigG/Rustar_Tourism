<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rustaronline.mobile.rustartourism.Activities.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/HotelName"
                style="?android:attr/textColor"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_toEndOf="@+id/imageView"
                android:paddingTop="10dp"
                android:paddingLeft="15dp"
                android:text="Rixsos" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/HotelClass"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:rating="3"
                android:layout_alignBottom="@+id/HotelName"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/Description"
                android:text="Description"
                android:textColor="@color/black"
                android:layout_below="@+id/imageView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Date"
                android:id="@+id/Date"
                android:layout_below="@+id/Description"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="@color/black"
                android:paddingTop="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="$900"
                android:id="@+id/Price"
                android:textColor="@color/lightRustarGreen"
                android:layout_below="@+id/Date"
                android:layout_alignRight="@+id/HotelClass"
                android:layout_alignEnd="@+id/HotelClass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Availability_calendar"
                android:id="@+id/textView33"
                android:textColor="@color/lightRustarGreen"
                android:paddingTop="10dp"
                android:layout_below="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView33"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/mainTableLayout">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:text="@string/StandardRoom"
                            android:id="@+id/textView34"
                            android:layout_column="0"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black"/>

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Monday"
                            android:id="@+id/textView35"
                            android:layout_column="1"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black"/>

                        <TextView
                            android:text="@string/Tuesday"
                            android:id="@+id/textView36"
                            android:layout_column="2"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black"/>

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Wednesday"
                            android:id="@+id/textView37"
                            android:layout_column="3"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Thursday"
                            android:id="@+id/textView37"
                            android:layout_column="4"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Friday"
                            android:id="@+id/textView37"
                            android:layout_column="5"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Saturday"
                            android:id="@+id/textView37"
                            android:layout_column="6"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black" />

                        <TextView
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:text="@string/Sunday"
                            android:id="@+id/textView37"
                            android:layout_column="7"
                            android:textSize="15dp"
                            android:background="@drawable/border"
                            android:textColor="@color/black" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>

            <Button
                android:background="@color/rustarGreen"
                android:textColor="@color/White"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:text="@string/Book"
                android:id="@+id/button"
                android:layout_below="@+id/Price"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
